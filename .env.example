# AGENTVBX Environment Configuration
# Copy this to .env and fill in your values

# ─── Redis ─────────────────────────────────────────────────────────
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
# REDIS_PASSWORD=

# ─── Ollama ────────────────────────────────────────────────────────
OLLAMA_HOST=127.0.0.1
OLLAMA_PORT=11434
OLLAMA_DEFAULT_MODEL=qwen2.5:7b

# ─── Telnyx ────────────────────────────────────────────────────────
TELNYX_API_KEY=
TELNYX_WEBHOOK_SECRET=
# TELNYX_SIP_CONNECTION_ID=

# ─── Deepgram ──────────────────────────────────────────────────────
DEEPGRAM_API_KEY=

# ─── Search Tools ──────────────────────────────────────────────────
# EXA_API_KEY=
# FIRECRAWL_API_KEY=
# TAVILY_API_KEY=

# ─── Platform Integrations ────────────────────────────────────────
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# MICROSOFT_CLIENT_ID=
# MICROSOFT_CLIENT_SECRET=

# ─── Application ──────────────────────────────────────────────────
NODE_ENV=development
LOG_LEVEL=info
PORT=3000
WEBHOOK_PORT=3001

# ─── Paths ────────────────────────────────────────────────────────
# BASE_PATH defaults to ~/agentvbx if not set
# BASE_PATH=/home/user/agentvbx
